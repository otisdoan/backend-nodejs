<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit User</title>
  <link rel="stylesheet" href="/css/home.css">
</head>

<body>
  <div class="topnav">
    <a href="/">Home</a>
    <a href="/create">Create User</a>
  </div>
  <div class="form-add">
    <form action="/update-user/<%= infor.id %>?_method=PATCH" method="POST" class="add-user">
      <fieldset>
        <legend>Update user:</legend>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%=infor.name %>"><br><br>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%=infor.email %>"><br><br>
        <label for="city">City:</label>
        <input type="text" id="city" name="city" value="<%=infor.city %>"><br><br>
        <input type="submit" value="Save">
      </fieldset>
    </form>
  </div>
</body>

</html>